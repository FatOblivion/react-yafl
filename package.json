{
  "name": "kwik-form",
  "version": "1.0.0",
  "description": "A library for creating forms in react using react's new context api",
  "main": "index.min.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "_clear": "rimraf lib/*",
    "_tsc": "tsc",
    "_make-bundle": "node build/make-bundle",
    "build": "run-s _clear _tsc _make-bundle",
    "watch": "tsc --watch",
    "test": "jest",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": ["prettier --parser typescript --write", "git add"]
  },
  "author": "Stuart Bourhill",
  "license": "MIT",
  "dependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "files": ["LICENSE", "README.md", "index.js", "lib", "validate"],
  "keywords": ["react", "form", "context"],

  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/react": "^16.3.12",
    "@types/react-dom": "^16.0.5",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.5",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.58.2",
    "ts-jest": "^22.4.4",
    "typescript": "^2.8.3",
    "uglify-es": "^3.3.9"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  }
}
